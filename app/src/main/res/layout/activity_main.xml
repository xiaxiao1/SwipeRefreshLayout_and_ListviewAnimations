<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/swipeLayout" >
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
        android:id="@+id/main_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Hello World!"
        android:textSize="18dp"
        android:gravity="center"
        android:background="#78acde"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/main_tv2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="11111111"
        android:textSize="18dp"
        android:gravity="center"
        android:background="#78acde"
        android:visibility="invisible"
        android:layout_below="@id/main_tv"
        />
    <TextView
        android:id="@+id/main_tv3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="22222222"
        android:textSize="18dp"
        android:gravity="center"
        android:background="#78acde"
        android:visibility="invisible"
        android:layout_below="@id/main_tv2"
        />
    <TextView
        android:id="@+id/main_tv4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="33333333"
        android:textSize="18dp"
        android:gravity="center"
        android:background="#78acde"
        android:visibility="invisible"
        android:layout_below="@id/main_tv3"
        />
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#000000"
        android:layout_below="@id/main_tv"/>
    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#000000"

        android:layout_below="@id/main_tv2"/>
    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#000000"
        android:layout_below="@id/main_tv3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#ddff99"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="refresh"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="enable"
            />
    </LinearLayout>

</RelativeLayout>
